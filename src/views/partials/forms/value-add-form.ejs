<form id="addValueForm" class="modal__body">
    <div class="form-group">
        <label for="newValueName" class="text-base">Value Name</label>
        <input type="text" id="newValueName" name="name" required
            class="rounded p-inline-lg p-block-xs text-lg border shadow-subtle w-full">
    </div>

    <div class="form-group">
        <label for="newShortName" class="text-base">Short Name</label>
        <input type="text" id="newShortName" name="short_name" required
            class="rounded p-inline-lg p-block-xs text-lg border shadow-subtle w-full">
    </div>

    <div class="form-group">
        <label for="newUnit" class="text-base">Unit</label>
        <input type="text" id="newUnit" name="unit" required
            class="rounded p-inline-lg p-block-xs text-lg border shadow-subtle w-full" placeholder="e.g., mg/L, Â°C, pH">
    </div>

    <div class="form-group">
        <label for="newMinValue" class="text-base">Minimum Value</label>
        <input type="number" id="newMinValue" name="min_value" step="0.01"
            class="measurement-input rounded p-inline-lg p-block-xs text-lg border shadow-subtle w-full text-left">
    </div>

    <div class="form-group">
        <label for="newMaxValue" class="text-base">Maximum Value</label>
        <input type="number" id="newMaxValue" name="max_value" step="0.01"
            class="measurement-input rounded p-inline-lg p-block-xs text-lg border shadow-subtle w-full text-left">
    </div>

    <div class="modal__footer">
        <button type="button" class="btn rounded p-inline-md p-block-sm text-lg bg-gray border-none pointer shadow"
            data-close>Cancel</button>
        <button type="submit"
            class="btn rounded p-inline-md p-block-sm text-lg text-primary bg-blue-accent shadow pointer border-none">
            Add Value
        </button>
    </div>
</form>