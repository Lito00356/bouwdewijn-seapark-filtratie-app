<div class="navigation__wrapper">
    <h1 class="flex flex--center gap-sm text-xl">
        <svg class="icon icon--3xl icon--account navigation__item-icon">
            <use href="/assets/icons/sprite.svg#account-icon"></use>
        </svg>
        <%= currentUser.firstname %>
    </h1>
    <div class="flex flex--col gap-sm">
        <span class="navigation__title">Dashboards</span>
        <ul class="navigation__list">
            <% navigationData.forEach((item)=> { %>
                <li class="navigation__list-item">
                    <a href="<%= item.href %>" aria-label="<%= item.ariaLabel %>" class="navigation__list-link <%= isNavItemActive(item.href) ? 'bg-blue-brand' : '' %>">
                        <svg class="icon icon--base navigation__item-icon" role="img" aria-label="<%= item.title %> icon">
                            <use href="/assets/icons/sprite.svg#<%= item.icon %>"></use>
                        </svg>
                        <%= item.title %>
                    </a>
                </li>
                <% }); %>
        </ul>
    </div>
</div>

<a href="/logout" class="btn btn--logout">Logout</a>